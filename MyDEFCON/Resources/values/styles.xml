<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.MyTheme" parent="Theme.MyTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="Theme.MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="drawerArrowStyle">@style/DrawerIcon</item>
    <item name="android:navigationBarColor" tools:targetApi="21">#000000</item>

    <!--<item name="android:textColorPrimary">@color/primaryText</item>
    <item name="android:textColorPrimaryInverse">@color/primaryText</item>
    <item name="actionMenuTextColor">@color/primaryText</item>
    <item name="android:textColorSecondary">@color/primaryText</item>-->

      <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->

    <item name="windowActionModeOverlay">true</item>

    <item name="colorAccent">@color/accent</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->

    <!-- Option to hide the drop shadow here

      <item name="actionBarStyle">@style/Theme.MyTheme.ActionBar</item>
      <item name="android:windowContentOverlay">@null</item>
    -->
  </style>

  <style name="Theme.MyTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <!-- remove shadow below action bar -->
    <!-- <item name="android:elevation">0dp</item> -->
    <!-- Support library compatibility -->
    <!--<item name="actionMenuTextColor">#ff0000</item>-->
    <item name="elevation">0dp</item>
  </style>

  <style name="NeonActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <item name="android:textColorPrimary">@color/primaryText</item>
    <item name="android:textColorPrimaryInverse">@color/primaryText</item>
    <item name="actionMenuTextColor">@color/primaryText</item>
    <item name="android:textColorSecondary">#ff0000</item>
    <item name="android:itemBackground">#80E8FF00</item>
  </style>

  <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/primaryText</item>
  </style>

  <style name="splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@layout/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:statusBarColor">@android:color/black</item>
    <item name="android:windowFullscreen">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeBackground">@color/primary</item>
    <item name="android:navigationBarColor">#000000</item>
  </style>

  <style name="CheckBoxStyle" parent="Theme.AppCompat">
    <item name="colorAccent">#7fff00</item>
    <item name="android:textColorSecondary">#ff4040</item>
  </style>

  <style name="RedGreenSwitchTheme" parent="Theme.AppCompat">
    <item name="colorControlActivated">#00ff00</item>
    <item name="colorSwitchThumbNormal">#ff0000</item>
  </style>
</resources>