<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDEFCON" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_A200</item>
        <item name="colorPrimaryVariant">@color/yellow_A200V</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_A700</item>
        <item name="colorSecondaryVariant">@color/red_A700V</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/yellow_A200</item>
        <item name="actionBarTheme">@style/Theme.MyDEFCON.ActionBar</item>
    </style>

    <style name="Theme.MyDEFCON.ActionBar" parent="">
        <item name="android:textColorPrimary">@color/red_A700</item>
    </style>
</resources>