<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDEFCON" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_A200</item>
        <item name="colorPrimaryVariant">@color/yellow_A200V1</item>
        <item name="colorOnPrimary">@color/red_A700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_A700</item>
        <item name="colorSecondaryVariant">@color/red_A700V</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/yellow_A200</item>
        <item name="actionBarTheme">@style/Theme.MyDEFCON.ActionBar</item>
        <item name="android:itemBackground">@color/yellow_A200</item>
        <item name="colorOnSurfaceVariant">@color/red_A700</item>
        <item name="actionMenuTextColor">@color/red_A700</item>
        <item name="android:textColor">@color/red_A700</item>
        <item name="android:tint">@color/red_A700</item>
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Theme.MyDEFCON.ActionBar" parent="">
        <item name="android:textColorPrimary">@color/red_A700</item>
        <item name="colorControlNormal">@color/red_A700</item>
    </style>

    <style name="Theme.MyDEFCON.One">
        <item name="DefconDark">@color/grey_700</item>
        <item name="DefconLight">@color/grey_50</item>
    </style>

    <style name="Theme.MyDEFCON.Two">
        <item name="DefconDark">@color/red_900</item>
        <item name="DefconLight">@color/red_A400</item>
    </style>

    <style name="Theme.MyDEFCON.Three">
        <item name="DefconDark">@color/yellow_A200V4</item>
        <item name="DefconLight">@color/yellow_A200</item>
    </style>

    <style name="Theme.MyDEFCON.Four">
        <item name="DefconDark">@color/green_800</item>
        <item name="DefconLight">@color/green_A400</item>
    </style>

    <style name="Theme.MyDEFCON.Five">
        <item name="DefconDark">@color/blue_800</item>
        <item name="DefconLight">@color/blue_500</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background_shape</item>
    </style>
</resources>